generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Background {
  GREEN
  YELLOW
  BLUE
  PINK
  DESIGN
  STUDY
  TILE
  LEAF
}

enum Status {
  RUNNING
  COMPLETED
  CANCELED
  PAUSED
}


model Study {
  id          String   @id @default(ulid())
  password    String
  title       String
  description String
  nickName    String
  background  Background
  totalPoint  Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  habits Habit[]
  emojis Emoji[]
  foci   Focus[]
}

model Habit {
  id        String  @id @default(ulid())
  name      String
  isDeleted Boolean @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  studyId String
  study   Study  @relation(fields: [studyId], references: [id], onDelete: Cascade)

  habitlogs Habitlog[]
}

model Habitlog {
  id        String   @id @default(ulid())
  createdAt DateTime @default(now())

  habitId String
  habit   Habit  @relation(fields: [habitId], references: [id], onDelete: Cascade)
}

model Emoji {
  id    String @id @default(ulid())
  name  String 
  count Int

  studyId String
  study   Study  @relation(fields: [studyId], references: [id], onDelete: Cascade)

  @@unique([studyId, name])
}

model Focus {
  id        String   @id @default(ulid())
  status    Status
  point     Int
  startedAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  studyId String
  study   Study  @relation(fields: [studyId], references: [id])
}
